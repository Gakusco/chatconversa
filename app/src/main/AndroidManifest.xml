<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcortiz.chatconversa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_chat_conversa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.Principal"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".splashes.splashLogout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".splashes.splashLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".splashes.splashRegistroExitoso"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.Register"
            android:parentActivityName=".Activities.Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Login" />
        </activity>
        <activity
            android:name=".splashes.splashAbrirApp"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>