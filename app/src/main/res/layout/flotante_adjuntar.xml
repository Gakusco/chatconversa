<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btnFoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_camera"></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:text="Cámara"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/btnGaleria"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_galeria"></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:text="Galería"></TextView>
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/btnUbicacion"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_brujula"></ImageButton>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:text="Ubicación"></TextView>
</LinearLayout>


</LinearLayout>